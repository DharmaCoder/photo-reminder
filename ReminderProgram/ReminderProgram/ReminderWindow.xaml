<Window x:Class="ReminderProgram.ReminderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="175" Width="400"
        WindowStyle="None" AllowsTransparency="True" Topmost="True" 
        Background="Transparent" ShowInTaskbar="False" Loaded="Window_Loaded">
    <Border BorderBrush="Black" BorderThickness="4"
            CornerRadius="5">
        <Grid>
            <Image x:Name="userImage" Stretch="UniformToFill" Loaded="userImage_Loaded" />
            <TextBlock x:Name="phrasesTextBlock"
                       Foreground="White" FontWeight="Bold" FontSize="32" 
                       HorizontalAlignment="Center" VerticalAlignment="Bottom" Loaded="phrasesTextBlock_Loaded" />
        </Grid>
    </Border>
</Window>

